---
import Layout from "@layouts/Layout.astro";
import Footer from "@components/Footer.astro";
---

<Layout title="Contacto">
  <div class="text-center justify-center pt-8 pb-8">
    <h1
      class="uppercase font-thin text-6xl text-stone-800 p-2 border-b-2 border-stone-800"
    >
      Contacto
    </h1>
  </div>
</Layout>
<section class="bg-zinc-200 py-20 pt-6">
  <div class="container px-6 py-10 mx-auto">
    <div class="lg:flex lg:items-center lg:-mx-10">
      <div class="lg:w-1/2 lg:mx-10">
        <h1 class="text-2xl font-semibold lg:text-3xl text-stone-800">
          Ponte en contacto
        </h1>

        <p class="mt-4 text-stone-500 text-lg">
          Me encantaria leer las preguntas que tienes hac√≠a mi
        </p>

        <form class="mt-12">
          <div class="-mx-2 md:items-center md:flex">
            <div class="flex-1 px-2">
              <label class="block mb-2 text-lg text-stone-800"
                >Nombre Completo</label
              >
              <input
                type="text"
                placeholder="John Doe"
                class="block w-full px-5 py-3 mt-2 text-stone-700 placeholder-gray-400 bg-stone-100 border border-stone-200 rounded-md ray-600 00 focus:border-stone-400 stone-400 focus:ring-stone-400 focus:outline-none focus:ring focus:ring-opacity-40"
              />
            </div>

            <div class="flex-1 px-2 mt-4 md:mt-0">
              <label class="block mb-2 text-lg text-stone-800">Email</label>
              <input
                type="email"
                placeholder="valechi@example.com"
                class="block w-full px-5 py-3 mt-2 placeholder-stone-400 bg-stone-100 border border-gray-200 rounded-md ray-600 00 focus:border-stone-400 stone-400 focus:ring-stone-400 focus:outline-none focus:ring focus:ring-opacity-40 text-stone-800"
              />
            </div>
          </div>

          <div class="w-full mt-4">
            <label class="block mb-2 text-lg text-stone-800">Mensaje</label>
            <textarea
              class="bg-stone-100 block w-full h-32 px-5 py-3 mt-2 placeholder-gray-400 border border-gray-200 rounded-md md:h-56 ray-600 00 focus:border-stone-400 stone-400 focus:ring-stone-400 focus:outline-none focus:ring focus:ring-opacity-40 text-stone-800"
              placeholder="Message"></textarea>
          </div>

          <button
            class="text-white w-full px-6 py-3 mt-4 text-sm font-medium tracking-wide capitalize transition-colors duration-300 transform bg-stone-600 rounded-md hover:bg-stone-500 focus:outline-none focus:ring focus:ring-stone-300 focus:ring-opacity-50"
          >
            Enviar Correo
          </button>
        </form>
      </div>

      <div
        class="mt-12 lg:flex lg:mt-0 lg:flex-col lg:items-center lg:w-1/2 lg:mx-10"
      >
        <img
          class="object-cover mx-auto rounded-full lg:block shrink-0 w-96 h-96"
          src="../../public/valec.jpg"
          alt=""
        />

        <div class="mt-6 space-y-8 md:mt-8 justify-center items-center">
          <p class="flex -mx-2">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="w-6 h-6 mx-2 text-stone-500"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
              ></path>
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>

            <span class="mx-2 text-stone-700 truncate w-72">
              Escuela zendera
            </span>
          </p>

          <p class="flex items-start -mx-2">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="w-6 h-6 mx-2 text-stone-500"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
              ></path>
            </svg>

            <a href="">
              <span class="mx-2 text-stone-700 truncate w-72">312 123 456</span>
            </a>
          </p>

          <p class="flex items-start -mx-2">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="w-6 h-6 mx-2 text-stone-500"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
              ></path>
            </svg>
            <a href="">
              <span class="mx-2 text-stone-700 truncate w-72 font-medium"
                >valechi@example.com</span
              >
            </a>
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
<Footer />
